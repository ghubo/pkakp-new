---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Situs Web Pusat Kajian Akuntansi dan Keuangan Publik PKN STAN" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans bg-neutral-100">
		<header class="container flex h-20 items-center mx-auto">
			<a href="/">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" width="100" height="50" viewBox="0 5 20 10">
					<g>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash ease-in forwards" points="0, 0.5 6.5, 0.5 6.5, 6.5" stroke="#2db0a1" fill="transparent" stroke-width="1"/>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash .25s ease-in forwards" points="4, 4.5 10.5, 4.5 10.5, 10.5" stroke="#ffeb34" fill="transparent" stroke-width="1"/>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash .5s ease-in forwards" points="2, 2.5 8.5, 2.5 8.5, 8.5" stroke="#ff9d33" fill="transparent" stroke-width="1"/>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash .75s ease-out forwards" points="9, 8.5 2.5, 8.5 2.5, 2.5" stroke="#ff9d33" fill="transparent" stroke-width="1"/>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash .5s ease-out forwards" points="11, 10.5 4.5, 10.5 4.5, 4.5" stroke="#ffeb34" fill="transparent" stroke-width="1"/>
						<polyline style="stroke-dasharray: 13; stroke-dashoffset: 13; animation: 1s dash .25s ease-out forwards" points="7, 6.5 0.5, 6.5 0.5, 0.5" stroke="#2db0a1" fill="transparent" stroke-width="1"/>
					</g>
					<style>
						g {
							transform-box: full-box;
							transform-origin: 5.5px 5.5px;
							transform: rotate(-45deg);
							translate: 4.5px 4.5px
						}
						@keyframes dash {
							to {
								stroke-dashoffset: 0;
							}
						}
					</style>
				</svg>
			</a>
			<div class="flex gap-4 w-full justify-center">
				<a href="/profil">Profil</a>
				<a href="/artikel">Artikel</a>
				<a href="/prestasi">Prestasi</a>
			</div>
		</header>
		<slot />
		<footer>
			<div class="grid gap-4 justify-center place-items-center">
				<p>Â© PKAKP PKN STAN 2024</p>
			</div>
		</footer>
	</body>
</html>
